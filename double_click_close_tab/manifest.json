{
  "manifest_version": 3,
  "name": "Double Click to Close Tab",
  "version": "1.0",
  "description": "Close tabs by double-clicking empty area on the page.",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
